{
  "name": "alchohalt",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build --outDir dist",
    "build:ci": "CI=true timeout 300s vite build --outDir dist || (echo 'Build timeout' && exit 1)",
    "lint": "eslint --ext .ts,.tsx src",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "test": "vitest run",
    "lh": "echo 'Open Chrome DevTools → Lighthouse → PWA. Target ≥95'",
    "preview": "vite preview",
    "verify:release": "npm run typecheck && npm test && npm run build",
    "scan": "python3 repo_scan.py",
    "bundle:report": "rollup-plugin-visualizer --version >/dev/null 2>&1 || pnpm add -D rollup-plugin-visualizer && node -e \"console.log('Visualizer ready')\"",
    "scan:json": "python3 repo_scan.py --json",
    "scan:strict": "SCAN_MAX_FILE=${SCAN_MAX_FILE:-600} SCAN_MAX_FN=${SCAN_MAX_FN:-80} SCAN_COMPLEXITY=${SCAN_COMPLEXITY:-23} python3 repo_scan.py --fail",
    "scan:dot": "python3 repo_scan.py --dot imports.dot && (command -v dot >/dev/null 2>&1 && dot -Tpng imports.dot -o imports.png || echo 'graphviz not installed; DOT only')",
    "codemod:split": "node --loader ts-node/esm tools/split_long_ts_or_tsx.ts",
    "test:smoke": "node --loader ts-node/esm tools/gen_smoke_tests.ts",
    "test:ci": "vitest run --coverage --reporter=default || jest --ci --coverage",
    "coverage:fallback": "node ./tools/coverage_fallback.cjs",
    "coverage:check": "node ./tools/coverage_gate.cjs",
    "deadcode": "ts-prune -p tsconfig.json",
    "deps:check": "depcheck --ignores=rollup-plugin-visualizer,@capacitor/android,@capacitor/ios,@size-limit/file,@size-limit/preset-small-lib,@testing-library/user-event,@types/jsdom,@vitest/coverage-v8,autoprefixer,postcss,prettier,tailwindcss,ts-node --skip-missing=true",
    "size:prep": "node ./tools/ensure_size_limit_config.js",
    "size:debug": "node ./tools/size_debug.js",
    "size:report": "npm run size:prep && npx size-limit && npx size-limit --why || true",
    "apk:size": "node ./tools/apk_size_check.cjs",
    "health:all": "npm run scan:strict && npm run coverage:check && npm run deadcode && npm run deps:check && npm run size:report && npm run apk:size",
    "lazy:capacitor": "node --loader ts-node/esm tools/lazy_capacitor_plugins.ts",
    "lazy:charts": "node --loader ts-node/esm tools/lazy_charts.ts",
    "lazy:i18n": "node --loader ts-node/esm tools/lazy_i18n.ts",
    "shake:libs": "node --loader ts-node/esm tools/shake_heavy_libs.ts",
    "scan:full": "bash ./tools/scan_report.sh",
    "release:checklist": "bash ./scripts/release-checklist.sh",
    "build:android": "npx cap sync android && cd android && ./gradlew assembleRelease",
    "build:ios": "npx cap sync ios && cd ios && xcodebuild -workspace App/App.xcworkspace -scheme App -configuration Release -archivePath App/build/App.xcarchive archive"
  },
  "dependencies": {
    "@capacitor/core": "6.0.0",
    "@capacitor/local-notifications": "6.0.0",
    "@capacitor/preferences": "6.0.0",
    "nanoid": "5.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "recharts": "2.12.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@capacitor/android": "6.0.0",
    "@capacitor/cli": "6.0.0",
    "@capacitor/ios": "^6.0.0",
    "@size-limit/file": "^11.2.0",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@testing-library/jest-dom": "6.4.2",
    "@testing-library/react": "14.2.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.3.0",
    "@types/react": "18.2.66",
    "@types/react-dom": "18.2.21",
    "@typescript-eslint/eslint-plugin": "7.6.0",
    "@typescript-eslint/parser": "7.6.0",
    "@vitejs/plugin-react": "4.2.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "10.4.16",
    "depcheck": "^1.4.7",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-react": "7.34.1",
    "fast-glob": "^3.3.3",
    "glob": "^10.3.10",
    "jsdom": "^26.1.0",
    "postcss": "8.4.38",
    "prettier": "3.2.5",
    "size-limit": "^11.2.0",
    "tailwindcss": "3.4.1",
    "ts-morph": "^26.0.0",
    "ts-node": "^10.9.2",
    "ts-prune": "^0.10.3",
    "typescript": "5.4.2",
    "vite": "^5.2.2",
    "vite-plugin-pwa": "0.20.0",
    "vitest": "3.2.4"
  },
  "sideEffects": false,
  "packageManager": "npm@9.8.1"
}
